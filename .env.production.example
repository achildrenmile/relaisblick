# Synology NAS SSH connection
SYNOLOGY_HOST=straliadmin@station.strali.solutions

# Remote directory on the Synology
REMOTE_DIR=/volume1/docker/relaisblick

# Docker container settings
CONTAINER_NAME=relaisblick
IMAGE_NAME=relaisblick:latest
CONTAINER_PORT=3413:80

# Public URL for health check
SITE_URL=https://relaisblick.oeradio.at/

# Synology Docker path (default for Synology DSM)
DOCKER_CMD=/var/packages/Docker/target/usr/bin/docker
